{{ 'enhance-system.css' | asset_url | stylesheet_tag }}


<section class="enhance-system" id="enhance-system">
  <div class="enhance-system__background">
    <div class="enhance-system__hex-pattern"></div>
  </div>

  <div class="enhance-system__container">
    <div class="enhance-system__header">
      <h2 class="enhance-system__title">{{ section.settings.title | default: 'Enhance Your System' }}</h2>
    </div>

    <div class="enhance-system__cards">
      <div class="enhance-system__card">
        <div class="enhance-system__card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"></path>
            <path d="m3.3 7 8.7 5 8.7-5"></path>
            <path d="M12 22V12"></path>
          </svg>
        </div>
        <h3 class="enhance-system__card-title">{{ section.settings.card1_title | default: 'BL-VT PRO VACUUM TOOL' }}</h3>
        <p class="enhance-system__card-desc">{{ section.settings.card1_desc | default: 'Professional LED module vacuum tool for effortless front maintenance and module replacement. Essential for service teams.' }}</p>
        <div class="enhance-system__card-price">{{ section.settings.card1_price | default: '$249' }}</div>
        <a href="{{ section.settings.card1_link | default: '#' }}" class="enhance-system__card-btn">
          {{ section.settings.card1_button | default: 'ADD TO ORDER' }}
        </a>
      </div>

      <div class="enhance-system__card">
        <div class="enhance-system__card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
        <h3 class="enhance-system__card-title">{{ section.settings.card2_title | default: 'EXTENDED WARRANTY' }}</h3>
        <p class="enhance-system__card-desc">{{ section.settings.card2_desc | default: 'Extend comprehensive warranty coverage from 4 years to 7 years. Includes all parts, labor, and priority support.' }}</p>
        <div class="enhance-system__card-price">{{ section.settings.card2_price | default: '+$4,500' }}</div>
        <a href="{{ section.settings.card2_link | default: '#' }}" class="enhance-system__card-btn">
          {{ section.settings.card2_button | default: 'ADD PROTECTION' }}
        </a>
      </div>

      <div class="enhance-system__card">
        <div class="enhance-system__card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"></path>
            <path d="m3.3 7 8.7 5 8.7-5"></path>
            <path d="M12 22V12"></path>
          </svg>
        </div>
        <h3 class="enhance-system__card-title">{{ section.settings.card3_title | default: 'SPARE MODULE KIT' }}</h3>
        <p class="enhance-system__card-desc">{{ section.settings.card3_desc | default: 'Additional 10% spare COB LED modules beyond standard 5%. Recommended for mission-critical installations.' }}</p>
        <div class="enhance-system__card-price">{{ section.settings.card3_price | default: '+$8,900' }}</div>
        <a href="{{ section.settings.card3_link | default: '#' }}" class="enhance-system__card-btn">
          {{ section.settings.card3_button | default: 'ADD SPARES' }}
        </a>
      </div>
    </div>
  </div>
</section>

