<section class="section section_custom-bundle" data-section-id="{{ section.id }}" data-section-type="custom-bundle">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title  }}</h2>
      </header>
    {%- endif -%}

    <div class="custom__bundle rte">
      {{ section.settings.textarea }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Bundle",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your title"
    },
    {
      "type": "text",
      "id": "textarea",
      "label": "Textarea",
      "default": "<p>Write or copy/paste HTML code</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom Bundle"
    }
  ]
}
{% endschema %}