{{ 'trusted-leaders.css' | asset_url | stylesheet_tag }}
{{ 'hexagon-pattern.css' | asset_url | stylesheet_tag }}

<section class="trusted-leaders {{ section.settings.custom_class }}" id="trusted-leaders-{{ section.id }}">
  <!-- Hexagonal Pattern Overlay -->
  {% render 'hexagon-pattern' %}

  <div class="trusted-leaders__container">
    <!-- Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="trusted-leaders__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <!-- Logos/Companies List -->
    <div class="trusted-leaders__logos">
      {% for block in section.blocks %}
        {% if block.type == 'company' %}
          <div class="trusted-leaders__logo-item" {{ block.shopify_attributes }}>
            {% if block.settings.company_link != blank %}
              <a href="{{ block.settings.company_link }}" class="trusted-leaders__link" target="_blank" rel="noopener">
            {% endif %}

            {% if block.settings.company_logo != blank %}
              <img
                src="{{ block.settings.company_logo | image_url: width: 200 }}"
                alt="{{ block.settings.company_name }}"
                class="trusted-leaders__logo-img"
                loading="lazy"
              >
            {% else %}
              <span class="trusted-leaders__company-name">{{ block.settings.company_name }}</span>
            {% endif %}

            {% if block.settings.company_link != blank %}
              </a>
            {% endif %}
          </div>

          {% unless forloop.last %}
            <span class="trusted-leaders__separator"></span>
          {% endunless %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trusted Leaders",
  "tag": "section",
  "class": "trusted-leaders-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted By Industry Leaders"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 40,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Heading Font Size"
    },
    {
      "type": "range",
      "id": "company_font_size",
      "min": 12,
      "max": 28,
      "step": 2,
      "default": 18,
      "unit": "px",
      "label": "Company Name Font Size"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#0a0f14"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator Color",
      "default": "#3a4a5e"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 20,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 20,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px",
      "label": "Padding Bottom"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "checkbox",
      "id": "show_pattern",
      "label": "Show Hexagonal Pattern",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS Class"
    }
  ],
  "blocks": [
    {
      "type": "company",
      "name": "Company",
      "settings": [
        {
          "type": "text",
          "id": "company_name",
          "label": "Company Name",
          "default": "Company Name"
        },
        {
          "type": "image_picker",
          "id": "company_logo",
          "label": "Company Logo (optional)",
          "info": "If no logo is provided, company name will be displayed as text"
        },
        {
          "type": "url",
          "id": "company_link",
          "label": "Company Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trusted Leaders",
      "blocks": [
        {
          "type": "company",
          "settings": {
            "company_name": "SpaceX"
          }
        },
        {
          "type": "company",
          "settings": {
            "company_name": "University of Hawaii"
          }
        },
        {
          "type": "company",
          "settings": {
            "company_name": "Epic Games"
          }
        },
        {
          "type": "company",
          "settings": {
            "company_name": "City of Mesa"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  #trusted-leaders-{{ section.id }} {
    --tl-bg-color: {{ section.settings.bg_color }};
    --tl-text-color: {{ section.settings.text_color }};
    --tl-separator-color: {{ section.settings.separator_color }};
    --tl-heading-size: {{ section.settings.heading_font_size }}px;
    --tl-company-size: {{ section.settings.company_font_size }}px;
    --tl-padding-top: {{ section.settings.padding_top }}px;
    --tl-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

</style>
