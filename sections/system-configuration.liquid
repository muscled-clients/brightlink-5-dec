{{ 'system-configuration.css' | asset_url | stylesheet_tag }}

<section
  id="system-configuration-{{ section.id }}"
  class="system-configuration {{ section.settings.custom_class }}"
>
  <!-- Hexagonal Pattern Overlay -->
  {% if section.settings.show_pattern %}
    <div class="system-configuration__pattern"></div>
  {% endif %}

  <div class="system-configuration__container">
    <!-- Header Section -->
    <div class="system-configuration__header">
      {% if section.settings.section_label != blank %}
        <span class="system-configuration__label">{{ section.settings.section_label }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="system-configuration__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="system-configuration__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <!-- Main Visual Area -->
    <div class="system-configuration__visual">
      <!-- Blueprint Frame -->
      <div class="system-configuration__blueprint">
        <!-- Corner Markers -->
        <div class="system-configuration__corner system-configuration__corner--tl"></div>
        <div class="system-configuration__corner system-configuration__corner--tr"></div>
        <div class="system-configuration__corner system-configuration__corner--bl"></div>
        <div class="system-configuration__corner system-configuration__corner--br"></div>

        <!-- Grid Lines -->
        <div class="system-configuration__grid-lines"></div>
      </div>

      <!-- Top Metric - Width -->
      <div class="system-configuration__metric system-configuration__metric--top">
        <div class="system-configuration__metric-bracket system-configuration__metric-bracket--left"></div>
        <div class="system-configuration__metric-line"></div>
        <div class="system-configuration__metric-bracket system-configuration__metric-bracket--right"></div>
        <div class="system-configuration__metric-info">
          <span class="system-configuration__metric-label">{{ section.settings.width_label }}</span>
          <span class="system-configuration__metric-value">{{ section.settings.width_value }}</span>
        </div>
      </div>

      <!-- Right Metric - Height -->
      <div class="system-configuration__metric system-configuration__metric--right">
        <div class="system-configuration__metric-bracket system-configuration__metric-bracket--top"></div>
        <div class="system-configuration__metric-line"></div>
        <div class="system-configuration__metric-bracket system-configuration__metric-bracket--bottom"></div>
        <div class="system-configuration__metric-info">
          <span class="system-configuration__metric-label">{{ section.settings.height_label }}</span>
          <span class="system-configuration__metric-value">{{ section.settings.height_value }}</span>
        </div>
      </div>

      <!-- LED Wall Display -->
      <div class="system-configuration__display">
        {% if section.settings.display_image != blank %}
          <img
            src="{{ section.settings.display_image | image_url: width: 800 }}"
            alt="LED Video Wall Configuration"
            class="system-configuration__display-image"
            loading="lazy"
          >
        {% else %}
          <div class="system-configuration__display-placeholder">
            <div class="system-configuration__led-grid">
              {% for row in (1..8) %}
                <div class="system-configuration__led-row">
                  {% for col in (1..8) %}
                    <div class="system-configuration__led-cabinet"></div>
                  {% endfor %}
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Bottom Metric - Diagonal -->
      <div class="system-configuration__metric system-configuration__metric--bottom">
        <span class="system-configuration__metric-diagonal">{{ section.settings.diagonal_value }}</span>
        <span class="system-configuration__metric-pixels">{{ section.settings.pixels_value }}</span>
      </div>
    </div>

    <!-- Detail Cards Section -->
    <div class="system-configuration__cards">
      <!-- Cabinet Detail Card -->
      <div class="system-configuration__card system-configuration__card--cabinet">
        <div class="system-configuration__card-header">
          <div class="system-configuration__card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zm-7-2h2v-4h4v-2h-4V7h-2v4H8v2h4z"/>
            </svg>
          </div>
          <div class="system-configuration__card-titles">
            <h3 class="system-configuration__card-title">{{ section.settings.cabinet_title }}</h3>
            <p class="system-configuration__card-subtitle">{{ section.settings.cabinet_subtitle }}</p>
          </div>
        </div>

        <div class="system-configuration__card-body">
          <div class="system-configuration__card-image">
            {% if section.settings.cabinet_image != blank %}
              <img
                src="{{ section.settings.cabinet_image | image_url: width: 300 }}"
                alt="Individual Cabinet"
                loading="lazy"
              >
            {% else %}
              <div class="system-configuration__cabinet-placeholder">
                <div class="system-configuration__cabinet-visual">
                  <div class="system-configuration__cabinet-module-grid">
                    <div class="system-configuration__cabinet-module"></div>
                    <div class="system-configuration__cabinet-module"></div>
                    <div class="system-configuration__cabinet-module"></div>
                    <div class="system-configuration__cabinet-module"></div>
                  </div>
                </div>
                <span class="system-configuration__cabinet-label">4 COB Modules</span>
                <span class="system-configuration__cabinet-sublabel">480 × 270 pixels per cabinet</span>
              </div>
            {% endif %}
          </div>

          <div class="system-configuration__specs-table">
            <div class="system-configuration__spec-row">
              <span class="system-configuration__spec-label">Dimensions</span>
              <span class="system-configuration__spec-value">{{ section.settings.cabinet_dimensions }}</span>
            </div>
            <div class="system-configuration__spec-row">
              <span class="system-configuration__spec-label">Imperial</span>
              <span class="system-configuration__spec-value">{{ section.settings.cabinet_imperial }}</span>
            </div>
            <div class="system-configuration__spec-row">
              <span class="system-configuration__spec-label">Weight</span>
              <span class="system-configuration__spec-value">{{ section.settings.cabinet_weight }}</span>
            </div>
            <div class="system-configuration__spec-row">
              <span class="system-configuration__spec-label">Resolution</span>
              <span class="system-configuration__spec-value">{{ section.settings.cabinet_resolution }}</span>
            </div>
            <div class="system-configuration__spec-row">
              <span class="system-configuration__spec-label">Module Count</span>
              <span class="system-configuration__spec-value">{{ section.settings.cabinet_modules }}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Connection Detail Card -->
      <div class="system-configuration__card system-configuration__card--connection">
        <div class="system-configuration__card-header">
          <div class="system-configuration__card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
            </svg>
          </div>
          <div class="system-configuration__card-titles">
            <h3 class="system-configuration__card-title">{{ section.settings.connection_title }}</h3>
            <p class="system-configuration__card-subtitle">{{ section.settings.connection_subtitle }}</p>
          </div>
        </div>

        <div class="system-configuration__card-body">
          <!-- Lock Visual -->
          <div class="system-configuration__lock-visual">
            <div class="system-configuration__lock-icon-large">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
              </svg>
              <span class="system-configuration__lock-badge">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="12" height="12">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </span>
            </div>
            <span class="system-configuration__lock-label">Quick Connect Locking</span>
            <span class="system-configuration__lock-sublabel">Tool-free installation system</span>
          </div>

          <!-- Features List -->
          <div class="system-configuration__features">
            <div class="system-configuration__feature">
              <div class="system-configuration__feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
              <div class="system-configuration__feature-text">
                <span class="system-configuration__feature-title">Precision Alignment</span>
                <span class="system-configuration__feature-desc">Self-aligning mechanical system ensures perfect cabinet registration</span>
              </div>
            </div>

            <div class="system-configuration__feature">
              <div class="system-configuration__feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
              <div class="system-configuration__feature-text">
                <span class="system-configuration__feature-title">Secure Locking</span>
                <span class="system-configuration__feature-desc">Patented quick-release mechanism with safety lock indicators</span>
              </div>
            </div>

            <div class="system-configuration__feature">
              <div class="system-configuration__feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
              <div class="system-configuration__feature-text">
                <span class="system-configuration__feature-title">Hot-Swappable</span>
                <span class="system-configuration__feature-desc">Replace cabinets without powering down the entire system</span>
              </div>
            </div>

            <div class="system-configuration__feature">
              <div class="system-configuration__feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
              <div class="system-configuration__feature-text">
                <span class="system-configuration__feature-title">Cable Management</span>
                <span class="system-configuration__feature-desc">Integrated routing channels for clean professional installations</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="system-configuration__cta-section">
      <h3 class="system-configuration__cta-heading">{{ section.settings.cta_heading }}</h3>
      <p class="system-configuration__cta-subheading">{{ section.settings.cta_subheading }}</p>

      <div class="system-configuration__cta-buttons">
        {% if section.settings.primary_btn_text != blank %}
          <a href="{{ section.settings.primary_btn_link }}" class="system-configuration__btn system-configuration__btn--primary">
            {{ section.settings.primary_btn_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_btn_text != blank %}
          <a href="{{ section.settings.secondary_btn_link }}" class="system-configuration__btn system-configuration__btn--secondary">
            {{ section.settings.secondary_btn_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
