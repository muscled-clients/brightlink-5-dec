                {% endcase %}
              </svg>
              {{ block.settings.tab_title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <div class="controller-tabs__panels">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
            <div
