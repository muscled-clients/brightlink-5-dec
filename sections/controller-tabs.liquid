<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.controller-tabs');
  if (!section) return;

  const tabs = section.querySelectorAll('.controller-tabs__tab');
  const panels = section.querySelectorAll('.controller-tabs__panel');
  let currentIndex = 0;

  tabs.forEach((tab, index) => {
    tab.addEventListener('click', function() {
      const newIndex = parseInt(this.dataset.tabIndex);
      if (newIndex === currentIndex) return;

      tabs.forEach(t => {
        t.classList.remove('controller-tabs__tab--active');
        t.setAttribute('aria-selected', 'false');
      });
      this.classList.add('controller-tabs__tab--active');
      this.setAttribute('aria-selected', 'true');

      panels.forEach(p => {
        p.classList.remove('controller-tabs__panel--active');
        p.classList.remove('controller-tabs__panel--slide-left');
        p.classList.remove('controller-tabs__panel--slide-right');
      });

      const targetPanel = panels[newIndex];
      if (newIndex > currentIndex) {
        targetPanel.classList.add('controller-tabs__panel--slide-right');
      } else {
        targetPanel.classList.add('controller-tabs__panel--slide-left');
      }
      targetPanel.classList.add('controller-tabs__panel--active');

      currentIndex = newIndex;
    });
  });
});
</script>

{% schema %}
{
  "name": "Controller Tabs",
  "tag": "section",
  "class": "controller-tabs-section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Section Label",
      "default": "PROFESSIONAL VIDEO WALL CONTROLLER"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NovaStar H2 Controller"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Enterprise-grade processing power for mission-critical video wall installations"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Authorized NovaStar Partner"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Controller Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Overview"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Tab Icon",
          "options": [
            { "value": "overview", "label": "Overview" },
            { "value": "integration", "label": "Integration" },
            { "value": "4k", "label": "4K" },
            { "value": "processing", "label": "Processing" },
            { "value": "quality", "label": "Quality" },
            { "value": "flexible", "label": "Flexibility" }
          ],
          "default": "overview"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
