                    {% else %}
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  {% endcase %}
                </svg>
                {{ block.settings.tab_title }}
              </button>
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>

      <div class="controller-tabs__panels">
        {% if controller_tabs.size > 0 %}
          {% for tab in controller_tabs %}
            <div
              class="controller-tabs__panel {% if forloop.first %}controller-tabs__panel--active{% endif %}"
              role="tabpanel"
              id="ctrl-panel-{{ forloop.index }}"
              data-panel-index="{{ forloop.index0 }}"
            >
              <div class="controller-tabs__panel-content">
                <div class="controller-tabs__left">
                  <div class="controller-tabs__image-area">
                    {% if tab.certified_badge.value != blank %}
                      <div class="controller-tabs__certified-badge">{{ tab.certified_badge.value }}</div>
                    {% endif %}

                    {% if tab.image.value != blank %}
                      <img src="{{ tab.image.value | image_url: width: 500 }}" alt="{{ tab.tab_title.value }}" class="controller-tabs__product-image" loading="lazy" width="500" height="300">
                    {% elsif controller_image != blank %}
                      <img src="{{ controller_image | image_url: width: 500 }}" alt="{{ controller_title }}" class="controller-tabs__product-image" loading="lazy" width="500" height="300">
                    {% else %}
                      <div class="controller-tabs__image-placeholder">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="rgba(255,255,255,0.1)">
                          <path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM5 15h14v3H5z"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>

                  <div class="controller-tabs__config-section">
                    <h4 class="controller-tabs__config-title">{{ tab.config_title.value | default: 'Your Configuration Includes:' }}</h4>
                    <ul class="controller-tabs__config-list">
                      {% if controller_config_includes.size > 0 %}
                        {% for config_item in controller_config_includes %}
                          <li>
                            <span class="controller-tabs__config-dot"></span>
                            {{ config_item }}
                          </li>
                        {% endfor %}
                      {% endif %}
                    </ul>
                  </div>
                </div>

                <div class="controller-tabs__right">
                  <div class="controller-tabs__description">
                    <p>{{ tab.description.value }}</p>
                    {% if tab.read_more_link.value != blank %}
                      <a href="{{ tab.read_more_link.value }}" class="controller-tabs__read-more">Read More</a>
                    {% endif %}
                  </div>

                  <ul class="controller-tabs__features-list">
                    {% for feature in tab.features.value %}
                      <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        {{ feature }}
                      </li>
                    {% endfor %}
                  </ul>

                  {% if controller_specs_url != blank %}
                    <a href="{{ controller_specs_url }}" class="controller-tabs__button">
                      VIEW FULL CONTROLLER SPECS
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                      </svg>
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          {% for block in section.blocks %}
            {% if block.type == 'tab' %}
              <div
                class="controller-tabs__panel {% if forloop.first %}controller-tabs__panel--active{% endif %}"
                role="tabpanel"
                id="ctrl-panel-{{ block.id }}"
                data-panel-index="{{ forloop.index0 }}"
              >
                <div class="controller-tabs__panel-content">
                  <div class="controller-tabs__left">
                    <div class="controller-tabs__image-area">
                      {% if block.settings.certified_badge != blank %}
                        <div class="controller-tabs__certified-badge">{{ block.settings.certified_badge }}</div>
                      {% endif %}

                      {% if block.settings.image != blank %}
                        <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.tab_title }}" class="controller-tabs__product-image" loading="lazy" width="500" height="300">
                      {% else %}
                        <div class="controller-tabs__image-placeholder">
                          <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="rgba(255,255,255,0.1)">
                            <path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM5 15h14v3H5z"/>
                          </svg>
                        </div>
                      {% endif %}
                    </div>

                    <div class="controller-tabs__config-section">
                      <h4 class="controller-tabs__config-title">{{ block.settings.config_title | default: 'Your Configuration Includes:' }}</h4>
                      <ul class="controller-tabs__config-list">
                        {% if block.settings.config1 != blank %}
                          <li>
