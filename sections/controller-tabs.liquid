{{ 'controller-tabs.css' | asset_url | stylesheet_tag }}

{% comment %} Get LED template data from product metafield {% endcomment %}
{% assign led_data = product.metafields.custom.led_template_data.value %}
{% assign controller_data = led_data.controller %}

<section class="controller-tabs" id="controller-tabs">
  <div class="controller-tabs__container">
    <!-- Header - Use metafield data if available, otherwise use section settings -->
    {% assign ctrl_title = controller_data.title | default: section.settings.title %}
    {% assign ctrl_description = controller_data.description | default: section.settings.subtitle %}

    <div class="controller-tabs__header">
      <div class="controller-tabs__header-text">
        {% if section.settings.label != blank %}
          <span class="controller-tabs__label">{{ section.settings.label }}</span>
        {% endif %}
        <h2 class="controller-tabs__heading">{{ ctrl_title }}</h2>
      </div>
      <p class="controller-tabs__subheading">{{ ctrl_description }}</p>

      {% if section.settings.badge_text != blank %}
        <div class="controller-tabs__badge">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          <span>{{ section.settings.badge_text }}</span>
        </div>
      {% endif %}
    </div>

    <div class="controller-tabs__content">
      <!-- Mobile Dropdown Navigation -->
      <div class="controller-tabs__dropdown">
        <select class="controller-tabs__select" aria-label="Select tab">
          {% for block in section.blocks %}
            {% if block.type == 'tab' %}
              <option value="{{ forloop.index0 }}">{{ block.settings.tab_title }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>

      <div class="controller-tabs__tabs" role="tablist">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
            <button
              class="controller-tabs__tab {% if forloop.first %}controller-tabs__tab--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="ctrl-panel-{{ block.id }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              <svg class="controller-tabs__tab-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                {% case block.settings.icon %}
                  {% when 'overview' %}
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zM7 10h2v7H7zm4-3h2v10h-2zm4 6h2v4h-2z"/>
                  {% when 'integration' %}
                    <path d="M17 16l-4-4V8.82C14.16 8.4 15 7.3 15 6c0-1.66-1.34-3-3-3S9 4.34 9 6c0 1.3.84 2.4 2 2.82V12l-4 4H3v5h5v-3.05l4-4.2 4 4.2V21h5v-5h-4z"/>
                  {% when '4k' %}
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-8 11H9.5v-2h-2v2H6V9h1.5v2h2V9H11v5zm7 0h-1.75l-1.75-2.25V14H13V9h1.5v2.25L16.25 9H18l-2.25 3L18 14z"/>
                  {% when 'processing' %}
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5.5-2.5l7.51-3.49L17.5 6.5 9.99 9.99 6.5 17.5zm5.5-6.6c.61 0 1.1.49 1.1 1.1s-.49 1.1-1.1 1.1-1.1-.49-1.1-1.1.49-1.1 1.1-1.1z"/>
                  {% when 'quality' %}
                    <path d="M7.5 4A5.5 5.5 0 0 0 2 9.5c0 .28.02.56.07.83l.01.08c.54 3.14 3.69 6.09 9.92 9.49 6.23-3.4 9.38-6.35 9.92-9.49l.01-.08c.05-.27.07-.55.07-.83A5.5 5.5 0 0 0 16.5 4c-1.93 0-3.5 1.57-3.5 3.5v.5h-2v-.5C11 5.57 9.43 4 7.5 4z"/>
                  {% when 'flexible' %}
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"/>
                  {% else %}
