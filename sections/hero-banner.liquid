{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "image_picker",
        "id": "poster",
        "label": "Poster Image"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext Text",
        "default": "Brightlink Interactive Displays"
      },
      {
        "type": "liquid",
        "id": "heading",
        "label": "Heading",
        "default": "Transforming Spaces With Stunning LED Video Walls"
      },
      {
        "type": "text",
        "id": "btn-txt",
        "label": "Button Label",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "btn-url",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner"
      }
    ]
  }
{% endschema %}