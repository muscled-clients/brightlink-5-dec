<style>
  #shopify-section-{{ section.id }} * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
 #shopify-section-{{ section.id }} .d5-video-banner{
    width: 100%;
    height: 550px;
    position: relative;
    margin-bottom: 100px;
  }
  .overlay-video-d5{
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.00) 40.03%, rgba(0, 0, 0, 0.63) 61.02%, rgba(0, 0, 0, 0.70) 100%);
  }
 #shopify-section-{{ section.id }} .d5-video-padding{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 100%;
    padding: 0 40px;
  }
 #shopify-section-{{ section.id }} .d5-video-tag{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
 #shopify-section-{{ section.id }} .d5-video-tag video, #shopify-section-{{ section.id }} .d5-video-tag img{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
 #shopify-section-{{ section.id }} .d5-video-content{
    max-width: 637px;
    position: relative;
    zindex: 1;
  }
 #shopify-section-{{ section.id }} .d5-video-content .subtext-d5{
    color: #FFF;
    font-family: "Open Sans";
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    margin-bottom: 16px;
  }
 #shopify-section-{{ section.id }} .d5-video-content .heading-d5{
    color: #FFF;
    font-family: "Open Sans";
    font-size: 48px;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
  }
 #shopify-section-{{ section.id }} .d5-video-content .banner-atc-d5{
    text-decoration: none;
    display: block;
    color: #FFF;
    text-align: center;
    font-family: "Open Sans";
    font-size: 15px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    padding: 14px 48px;
    background: #4190D2;
    width: max-content;
    margin-top: 32px;
  }
  @media (max-width: 768px){
  #shopify-section-{{ section.id }} .d5-video-content{
    width: 100%;
  }
  #shopify-section-{{ section.id }} .d5-video-banner{
    height: auto;
  }  
  #shopify-section-{{ section.id }} .d5-video-padding{
    padding: 54px 20px 57px;
  }
  #shopify-section-{{ section.id }} .overlay-video-d5{
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.00) 40.03%, rgba(0, 0, 0, 0.72) 61.02%, rgba(0, 0, 0, 0.80) 100%);
  }
  #shopify-section-{{ section.id }} .d5-video-content .subtext-d5{
    font-size: 14px;   
    margin-bottom: 10px;
  }
  #shopify-section-{{ section.id }} .d5-video-content .heading-d5{
    font-size: 32px;
  }
  #shopify-section-{{ section.id }} .d5-video-content .banner-atc-d5{
    padding: 12px 32px;
    margin-top: 24px;
  }
  @media (max-width: 380px) {
    #shopify-section-{{ section.id }} .d5-video-content .heading-d5 br{
      display: none;
    }
  }
}
    
</style>

<div class="d5-video-banner">
  <div class="d5-video-padding">
    <div class="d5-video-tag">
     {{ section.settings.video | video_tag: autoplay: "true", loop: "true", muted: "true", playsinline: "true" }}
      <!-- <img id="fallback-image-d5" src="{{ section.settings.poster | image_url: width: '1440px' }}"> -->
    </div>
    <div class="overlay-video-d5"></div>
    <div class="d5-video-content">
      <p class="subtext-d5">{{ section.settings.subtext }}</p>
      <p class="heading-d5">{{ section.settings.heading }}</p>
      <a class="banner-atc-d5" href="{{ section.settings.btn-url }}">{{ section.settings.btn-txt }}</a>
    </div>
  </div>
</div>
