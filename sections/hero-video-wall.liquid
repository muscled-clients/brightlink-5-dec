{{ 'hero-video-wall.css' | asset_url | stylesheet_tag }}

{% comment %} Get LED template data from product metafield {% endcomment %}
{% assign led_data = product.metafields.custom.led_template_data.value %}
{% assign hero_data = led_data.hero %}

{% comment %} Use metafield data with fallback to section settings {% endcomment %}
{% assign series_label = hero_data.series_label | default: section.settings.series_label %}
{% assign tagline = hero_data.tagline | default: section.settings.subheading %}
{% assign description = hero_data.description | default: section.settings.description %}

<section class="hero-video-wall-section {{ section.settings.custom_class }}" id="hero-video-wall-{{ section.id }}">
  <!-- Background Video -->
  <div class="hero-video-wall__video-container">
    {% if section.settings.video_url != blank %}
      <video class="hero-video-wall__video" autoplay muted loop playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {% elsif section.settings.video_file != blank %}
      {{ section.settings.video_file | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero-video-wall__video' }}
    {% else %}
      <!-- Fallback background image -->
      <div class="hero-video-wall__fallback-bg" style="background-image: url('{{ section.settings.fallback_image | image_url: width: 1920 }}');"></div>
    {% endif %}
    <!-- Dark Overlay -->
    <div class="hero-video-wall__overlay" style="background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});"></div>
  </div>

  <!-- Content -->
  <div class="hero-video-wall__content">
    <!-- Top Frame: Text Content -->
    <div class="hero-video-wall__text-frame">
      <!-- Series Label -->
      {% if series_label != blank %}
        <p class="hero-video-wall__series-label">{{ series_label }}</p>
      {% endif %}

      <!-- Main Heading (use product title) -->
      {% if section.settings.main_heading != blank %}
        <h1 class="hero-video-wall__main-heading">{{ section.settings.main_heading }}</h1>
      {% elsif product.title != blank %}
        <h1 class="hero-video-wall__main-heading">{{ product.title }}</h1>
      {% endif %}

      <!-- Subheading/Tagline -->
      {% if tagline != blank %}
        <p class="hero-video-wall__subheading">{{ tagline }}</p>
      {% endif %}

      <!-- Description -->
      {% if description != blank %}
        <p class="hero-video-wall__description">{{ description }}</p>
      {% endif %}

      <!-- Price & CTA Section -->
    <div class="hero-video-wall__cta-wrapper">
      <!-- Price Badge -->
      {% if section.settings.price_text != blank %}
        <div class="hero-video-wall__price-badge">
          {{ section.settings.price_text }}
        </div>
      {% endif %}

      <!-- CTA Buttons -->
      <div class="hero-video-wall__buttons">
        {% if section.settings.button_1_text != blank and section.settings.button_1_product %}
          <button type="button" class="hero-video-wall__btn hero-video-wall__btn--primary js-add-to-cart" data-variant-id="{{ section.settings.button_1_product.selected_or_first_available_variant.id }}">
            {{ section.settings.button_1_text }}
          </button>
        {% endif %}
        {% if section.settings.button_2_text != blank %}
          <a href="{{ section.settings.button_2_link | default: 'https://cal.com/tyson-edwards-brightlinkav' }}" class="hero-video-wall__btn hero-video-wall__btn--secondary">
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>

      <!-- Shipping Info -->
      {% if section.settings.shipping_text != blank %}
        <div class="hero-video-wall__shipping">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
          </svg>
          {{ section.settings.shipping_text }}
        </div>
      {% endif %}
    </div>
    </div>

    <!-- Feature Boxes - Use metafield metrics if available, otherwise use blocks -->
    <div class="hero-video-wall__features">
      {% if hero_data.metrics.size > 0 %}
        {% for metric in hero_data.metrics %}
          <div class="hero-video-wall__feature-box">
            <span class="hero-video-wall__feature-value">{{ metric.value }}</span>
            <span class="hero-video-wall__feature-label">{{ metric.label }}</span>
          </div>
        {% endfor %}
      {% else %}
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="hero-video-wall__feature-box" {{ block.shopify_attributes }}>
              <span class="hero-video-wall__feature-value">{{ block.settings.feature_value }}</span>
              <span class="hero-video-wall__feature-label">{{ block.settings.feature_label }}</span>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>

  <!-- Mobile Feature Boxes -->
  <div class="hero-video-wall__features_mob">
    {% if hero_data.metrics.size > 0 %}
      {% for metric in hero_data.metrics %}
        <div class="hero-video-wall__feature-box">
          <span class="hero-video-wall__feature-value">{{ metric.value }}</span>
          <span class="hero-video-wall__feature-label">{{ metric.label }}</span>
        </div>
      {% endfor %}
    {% else %}
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="hero-video-wall__feature-box" {{ block.shopify_attributes }}>
            <span class="hero-video-wall__feature-value">{{ block.settings.feature_value }}</span>
            <span class="hero-video-wall__feature-label">{{ block.settings.feature_label }}</span>
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.js-add-to-cart').forEach(function(button) {
    button.addEventListener('click', function() {
      var variantId = this.getAttribute('data-variant-id');
      var btn = this;
      var originalText = btn.textContent;

      if (!variantId) return;

      btn.disabled = true;
      btn.textContent = 'Adding...';

      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: variantId, quantity: 1 })
      })
      .then(function(response) { return response.json(); })
      .then(function() {
        btn.textContent = 'Added!';
        window.location.href = '/cart';
      })
      .catch(function() {
        btn.textContent = 'Error';
        setTimeout(function() {
          btn.textContent = originalText;
          btn.disabled = false;
        }, 2000);
      });
    });
  });
});
</script>

{% schema %}
