<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Smooth slide animation helper
    function slideDown(element, duration = 400) {
      // First ensure element is not display: none
      element.style.display = 'block';
      element.style.overflow = 'hidden';
      element.style.maxHeight = '0';
      element.style.opacity = '0';

      // Force reflow
      element.offsetHeight;

      const height = element.scrollHeight;
      element.style.transition = `max-height ${duration}ms ease, opacity ${duration * 0.75}ms ease`;

      requestAnimationFrame(() => {
        element.style.maxHeight = height + 'px';
        element.style.opacity = '1';
      });

      setTimeout(() => {
        element.style.maxHeight = 'none';
        element.style.overflow = '';
        element.style.transition = '';
      }, duration);
    }

    function slideUp(element, duration = 400) {
      element.style.overflow = 'hidden';
      
      // If element is display: none, show it temporarily to get height
      if (element.style.display === 'none') {
        element.style.display = 'block';
        element.style.maxHeight = '0';
      } else {
        element.style.maxHeight = element.scrollHeight + 'px';
      }
      
      element.style.opacity = '1';
      element.style.transition = `max-height ${duration}ms ease, opacity ${duration * 0.5}ms ease`;

      // Force reflow
      element.offsetHeight;

      requestAnimationFrame(() => {
        element.style.maxHeight = '0';
        element.style.opacity = '0';
      });

      setTimeout(() => {
        element.style.display = 'none';
        element.style.maxHeight = '';
        element.style.overflow = '';
        element.style.opacity = '';
        element.style.transition = '';
      }, duration);
    }

    // Toggle group (section separator) functionality
    document.querySelectorAll('[data-action="toggle-group"]').forEach((button) => {
      button.addEventListener('click', function () {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        const groupId = this.getAttribute('aria-controls');
        const groupContent = document.getElementById(groupId);

        if (expanded) {
          this.setAttribute('aria-expanded', 'false');

          // Close all questions within this group first
          groupContent.querySelectorAll('[data-action="toggle-collapsible"]').forEach((questionButton) => {
            const answerId = questionButton.getAttribute('aria-controls');
            const answerWrapper = document.getElementById(answerId);
            if (answerWrapper) {
              questionButton.setAttribute('aria-expanded', 'false');
              slideUp(answerWrapper, 300);
            }
          });

          // Then close the group
          slideUp(groupContent, 350);
        } else {
          this.setAttribute('aria-expanded', 'true');
          
          // Ensure group content is visible before sliding down
          groupContent.style.display = 'block';
          slideDown(groupContent, 400);
        }
      });
    });

    // Toggle question functionality
    document.querySelectorAll('[data-action="toggle-collapsible"]').forEach((button) => {
      button.addEventListener('click', function () {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        const answerId = this.getAttribute('aria-controls');
        const answerWrapper = document.getElementById(answerId);

        if (expanded) {
          this.setAttribute('aria-expanded', 'false');
          if (answerWrapper) {
            slideUp(answerWrapper, 300);
          }
        } else {
          this.setAttribute('aria-expanded', 'true');
          if (answerWrapper) {
            slideDown(answerWrapper, 350);
          }
        }
      });
    });
  });
</script>

