<section class="applications-tabs" id="applications-tabs">
  <div class="applications-tabs__background">
    <div class="applications-tabs__hex-pattern"></div>
  </div>

  <div class="applications-tabs__container">
    <div class="applications-tabs__header">
      <span class="applications-tabs__label">{{ section.settings.label | default: 'VERSATILE APPLICATIONS' }}</span>
      <h2 class="applications-tabs__title">{{ section.settings.title | default: 'Built for Every Environment' }}</h2>
      <p class="applications-tabs__subtitle">{{ section.settings.subtitle | default: 'From boardrooms to broadcast studios, Pro Spectrum delivers uncompromising performance across diverse professional settings' }}</p>
    </div>

    <div class="applications-tabs__nav">
      <select class="applications-tabs__mobile-select">
        {% for block in section.blocks %}
          <option value="{{ block.id }}">{{ block.settings.tab_title }}</option>
        {% endfor %}
      </select>
      <div class="applications-tabs__tabs">
        {% for block in section.blocks %}
          <button class="applications-tabs__tab {% if forloop.first %}active{% endif %}" data-tab="{{ block.id }}">
            <span class="applications-tabs__tab-icon">
              {% case block.settings.icon %}
                {% when 'monitor' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="3" rx="2"></rect><line x1="8" x2="16" y1="21" y2="21"></line><line x1="12" x2="12" y1="17" y2="21"></line></svg>
                {% when 'briefcase' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
                {% when 'video' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m22 8-6 4 6 4V8Z"></path><rect width="14" height="12" x="2" y="6" rx="2" ry="2"></rect></svg>
                {% when 'layout' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect><line x1="3" x2="21" y1="9" y2="9"></line><line x1="9" x2="9" y1="21" y2="9"></line></svg>
                {% when 'store' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m2 7 4.41-4.41A2 2 0 0 1 7.83 2h8.34a2 2 0 0 1 1.42.59L22 7"></path><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path><path d="M15 22v-4a2 2 0 0 0-2-2h-2a2 2 0 0 0-2 2v4"></path><path d="M2 7h20"></path></svg>
                {% else %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="3" rx="2"></rect><line x1="8" x2="16" y1="21" y2="21"></line><line x1="12" x2="12" y1="17" y2="21"></line></svg>
              {% endcase %}
            </span>
            {{ block.settings.tab_title }}
          </button>
        {% endfor %}
      </div>
    </div>

    <div class="applications-tabs__content-wrapper">
      {% for block in section.blocks %}
        <div class="applications-tabs__content {% if forloop.first %}active{% endif %}" data-content="{{ block.id }}" {{ block.shopify_attributes }}>
          <div class="applications-tabs__content-grid">
            <div class="applications-tabs__content-image">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.heading }}" loading="lazy">
              {% else %}
                <div class="applications-tabs__image-placeholder">
                  <div class="applications-tabs__image-stats">
                    <div class="applications-tabs__stat">
                      <span class="applications-tabs__stat-label">{{ block.settings.stat1_label | default: 'Rec Viewing' }}</span>
                      <span class="applications-tabs__stat-value">{{ block.settings.stat1_value | default: '10-30 feet' }}</span>
                    </div>
                    <div class="applications-tabs__stat">
                      <span class="applications-tabs__stat-label">{{ block.settings.stat2_label | default: 'Brightness' }}</span>
                      <span class="applications-tabs__stat-value">{{ block.settings.stat2_value | default: '150-300+' }}</span>
                    </div>
                    <div class="applications-tabs__stat">
                      <span class="applications-tabs__stat-label">{{ block.settings.stat3_label | default: 'Environment' }}</span>
                      <span class="applications-tabs__stat-value">{{ block.settings.stat3_value | default: 'High-Traffic' }}</span>
                    </div>
                  </div>
                </div>
              {% endif %}

              <div class="applications-tabs__common-config">
                <h4 class="applications-tabs__config-title">{{ block.settings.config_title | default: 'Common Configuration' }}</h4>
                <div class="applications-tabs__config-grid">
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config1_label | default: 'Size' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config1_value | default: '4×3 to 12×8 arrays' }}</span>
                  </div>
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config2_label | default: 'Resolution' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config2_value | default: '1.7M to 15.8M pixels' }}</span>
                  </div>
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config3_label | default: 'Brightness' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config3_value | default: '1000 nits (optional)' }}</span>
                  </div>
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config4_label | default: 'Controller' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config4_value | default: 'Novastar H2/H5' }}</span>
                  </div>
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config5_label | default: 'Mounting' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config5_value | default: 'Recessed or freestanding' }}</span>
                  </div>
                  <div class="applications-tabs__config-item">
                    <span class="applications-tabs__config-label">{{ block.settings.config6_label | default: 'Integrate' }}</span>
                    <span class="applications-tabs__config-value">{{ block.settings.config6_value | default: 'CMS & scheduling systems' }}</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="applications-tabs__content-info">
              <h3 class="applications-tabs__content-heading">{{ block.settings.heading }}</h3>
              <p class="applications-tabs__content-desc">{{ block.settings.description }}</p>
              <p class="applications-tabs__content-desc2">{{ block.settings.description2 }}</p>

              <div class="applications-tabs__why-section">
