    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('.applications-tabs__tab');
  const contents = document.querySelectorAll('.applications-tabs__content');
  const mobileSelect = document.querySelector('.applications-tabs__mobile-select');

  function switchTab(tabId) {
    tabs.forEach(t => t.classList.remove('active'));
    contents.forEach(c => c.classList.remove('active'));

    const activeTab = document.querySelector(`.applications-tabs__tab[data-tab="${tabId}"]`);
    const activeContent = document.querySelector(`.applications-tabs__content[data-content="${tabId}"]`);

    if (activeTab) activeTab.classList.add('active');
    if (activeContent) activeContent.classList.add('active');
  }

  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const tabId = this.dataset.tab;
      switchTab(tabId);
      if (mobileSelect) mobileSelect.value = tabId;
    });
  });

  if (mobileSelect) {
    mobileSelect.addEventListener('change', function() {
      switchTab(this.value);
    });
  }
});
</script>

