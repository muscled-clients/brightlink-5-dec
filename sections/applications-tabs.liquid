{{ 'applications-tabs.css' | asset_url | stylesheet_tag }}

{% comment %} Get LED template data from product metafield {% endcomment %}
{% assign led_data = product.metafields.custom.led_template_data.value %}
{% assign apps_data = led_data.applications %}
{% assign apps_tabs = apps_data.tabs %}

<section class="applications-tabs" id="applications-tabs">
  <div class="applications-tabs__container">
    <!-- Header - Use metafield data if available, otherwise use section settings -->
    {% assign apps_title = apps_data.title | default: section.settings.title | default: 'Built for Every Environment' %}
    {% assign apps_description = apps_data.description | default: section.settings.subtitle | default: 'From boardrooms to broadcast studios, Pro Spectrum delivers uncompromising performance across diverse professional settings' %}

    <div class="applications-tabs__header">
      <div class="applications-tabs__header-text">
        {% if section.settings.label != blank %}
          <span class="applications-tabs__label">{{ section.settings.label }}</span>
        {% endif %}
        <h2 class="applications-tabs__heading">{{ apps_title }}</h2>
      </div>
      <p class="applications-tabs__subheading">{{ apps_description }}</p>
    </div>

    <div class="applications-tabs__content">
      <!-- Mobile Dropdown Navigation -->
      <div class="applications-tabs__dropdown">
        <select class="applications-tabs__select" aria-label="Select application">
          {% if apps_tabs.size > 0 %}
            {% for tab in apps_tabs %}
              <option value="{{ forloop.index0 }}">{{ tab.tab_title }}</option>
            {% endfor %}
          {% else %}
            {% for block in section.blocks %}
              <option value="{{ forloop.index0 }}">{{ block.settings.tab_title }}</option>
            {% endfor %}
          {% endif %}
        </select>
      </div>

      <!-- Tab Navigation - Use metafield tabs if available, otherwise use blocks -->
      <div class="applications-tabs__tabs" role="tablist">
        {% if apps_tabs.size > 0 %}
          {% for tab in apps_tabs %}
            <button
              class="applications-tabs__tab {% if forloop.first %}applications-tabs__tab--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="app-panel-{{ forloop.index }}"
              data-tab-index="{{ forloop.index0 }}"
            >
              <svg class="applications-tabs__tab-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                {% case tab.icon %}
                  {% when 'monitor' %}
                    <path d="M20 3H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h6v2H8v2h8v-2h-2v-2h6c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 12H4V5h16v10z"/>
                  {% when 'briefcase' %}
                    <path d="M20 6h-4V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v2H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-6 0h-4V4h4v2z"/>
                  {% when 'video' %}
                    <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/>
                  {% when 'layout' %}
                    <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                  {% when 'store' %}
                    <path d="M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z"/>
                  {% else %}
                    <path d="M20 3H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h6v2H8v2h8v-2h-2v-2h6c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 12H4V5h16v10z"/>
                {% endcase %}
              </svg>
              {{ tab.tab_title }}
            </button>
          {% endfor %}
        {% else %}
          {% for block in section.blocks %}
            <button
              class="applications-tabs__tab {% if forloop.first %}applications-tabs__tab--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="app-panel-{{ block.id }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              <svg class="applications-tabs__tab-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                {% case block.settings.icon %}
                  {% when 'monitor' %}
                    <path d="M20 3H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h6v2H8v2h8v-2h-2v-2h6c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 12H4V5h16v10z"/>
                  {% when 'briefcase' %}
                    <path d="M20 6h-4V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v2H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-6 0h-4V4h4v2z"/>
                  {% when 'video' %}
