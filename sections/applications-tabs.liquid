<section class="applications-tabs" id="applications-tabs">
  <div class="applications-tabs__pattern"></div>

  <div class="applications-tabs__container">
    <div class="applications-tabs__header">
      {% if section.settings.label != blank %}
        <span class="applications-tabs__label">{{ section.settings.label }}</span>
      {% endif %}
      <h2 class="applications-tabs__heading">{{ section.settings.title | default: 'Built for Every Environment' }}</h2>
      <p class="applications-tabs__subheading">{{ section.settings.subtitle | default: 'From boardrooms to broadcast studios, Pro Spectrum delivers uncompromising performance across diverse professional settings' }}</p>
    </div>

    <div class="applications-tabs__content">
      <div class="applications-tabs__tabs" role="tablist">
        {% for block in section.blocks %}
          <button
            class="applications-tabs__tab {% if forloop.first %}applications-tabs__tab--active{% endif %}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="app-panel-{{ block.id }}"
            data-tab-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <svg class="applications-tabs__tab-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              {% case block.settings.icon %}
                {% when 'monitor' %}
                  <path d="M20 3H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h6v2H8v2h8v-2h-2v-2h6c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 12H4V5h16v10z"/>
                {% when 'briefcase' %}
                  <path d="M20 6h-4V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v2H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-6 0h-4V4h4v2z"/>
                {% when 'video' %}
                  <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/>
                {% when 'layout' %}
                  <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                {% when 'store' %}
                  <path d="M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z"/>
                {% else %}
                  <path d="M20 3H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h6v2H8v2h8v-2h-2v-2h6c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 12H4V5h16v10z"/>
              {% endcase %}
            </svg>
            {{ block.settings.tab_title }}
          </button>
        {% endfor %}
      </div>

      <div class="applications-tabs__panels">
        {% for block in section.blocks %}
          <div
            class="applications-tabs__panel {% if forloop.first %}applications-tabs__panel--active{% endif %}"
            role="tabpanel"
            id="app-panel-{{ block.id }}"
            data-panel-index="{{ forloop.index0 }}"
          >
            <div class="applications-tabs__panel-content">
              <div class="applications-tabs__left">
                <div class="applications-tabs__text">
                  <p>{{ block.settings.description }}</p>
                  <p>{{ block.settings.description2 }}</p>
                </div>

                <div class="applications-tabs__features">
                  {% if block.settings.feature1 != blank %}
                    <div class="applications-tabs__feature-card">
                      <div class="applications-tabs__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                        </svg>
                      </div>
                      <h4 class="applications-tabs__feature-title">{{ block.settings.feature1_title | default: 'Key Feature' }}</h4>
                      <p class="applications-tabs__feature-desc">{{ block.settings.feature1 }}</p>
                    </div>
                  {% endif %}

                  {% if block.settings.feature2 != blank %}
                    <div class="applications-tabs__feature-card">
                      <div class="applications-tabs__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
                        </svg>
                      </div>
                      <h4 class="applications-tabs__feature-title">{{ block.settings.feature2_title | default: 'Support' }}</h4>
                      <p class="applications-tabs__feature-desc">{{ block.settings.feature2 }}</p>
                    </div>
                  {% endif %}

                  {% if block.settings.feature3 != blank %}
                    <div class="applications-tabs__feature-card">
                      <div class="applications-tabs__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                        </svg>
                      </div>
                      <h4 class="applications-tabs__feature-title">{{ block.settings.feature3_title | default: 'Technical' }}</h4>
                      <p class="applications-tabs__feature-desc">{{ block.settings.feature3 }}</p>
                    </div>
                  {% endif %}
                </div>
              </div>

              <div class="applications-tabs__right">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.heading }}" class="applications-tabs__image" loading="lazy">
                {% else %}
                  <div class="applications-tabs__image-placeholder">
                    <div class="applications-tabs__stats-grid">
                      <div class="applications-tabs__stat-item">
                        <span class="applications-tabs__stat-label">{{ block.settings.stat1_label | default: 'Rec Viewing' }}</span>
                        <span class="applications-tabs__stat-value">{{ block.settings.stat1_value | default: '10-30 feet' }}</span>
                      </div>
                      <div class="applications-tabs__stat-item">
                        <span class="applications-tabs__stat-label">{{ block.settings.stat2_label | default: 'Brightness' }}</span>
                        <span class="applications-tabs__stat-value">{{ block.settings.stat2_value | default: '150-300+' }}</span>
                      </div>
                      <div class="applications-tabs__stat-item">
                        <span class="applications-tabs__stat-label">{{ block.settings.stat3_label | default: 'Environment' }}</span>
                        <span class="applications-tabs__stat-value">{{ block.settings.stat3_value | default: 'High-Traffic' }}</span>
                      </div>
                    </div>
                  </div>
                {% endif %}

                <div class="applications-tabs__specs-card">
                  <h4 class="applications-tabs__specs-title">{{ block.settings.heading }}</h4>
                  <div class="applications-tabs__specs-grid">
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config1_label | default: 'Size' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config1_value | default: '4×3 to 12×8 arrays' }}</span>
                    </div>
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config2_label | default: 'Resolution' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config2_value | default: '1.7M to 15.8M pixels' }}</span>
                    </div>
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config3_label | default: 'Brightness' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config3_value | default: '1000 nits (optional)' }}</span>
                    </div>
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config4_label | default: 'Controller' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config4_value | default: 'Novastar H2/H5' }}</span>
                    </div>
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config5_label | default: 'Mounting' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config5_value | default: 'Recessed or freestanding' }}</span>
                    </div>
                    <div class="applications-tabs__spec-row">
                      <span class="applications-tabs__spec-label">{{ block.settings.config6_label | default: 'Integrate' }}</span>
                      <span class="applications-tabs__spec-value">{{ block.settings.config6_value | default: 'CMS & scheduling systems' }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.applications-tabs');
  if (!section) return;

  const tabs = section.querySelectorAll('.applications-tabs__tab');
  const panels = section.querySelectorAll('.applications-tabs__panel');
  let currentIndex = 0;

  tabs.forEach((tab, index) => {
    tab.addEventListener('click', function() {
      const newIndex = parseInt(this.dataset.tabIndex);
      if (newIndex === currentIndex) return;

      tabs.forEach(t => {
        t.classList.remove('applications-tabs__tab--active');
        t.setAttribute('aria-selected', 'false');
      });
      this.classList.add('applications-tabs__tab--active');
      this.setAttribute('aria-selected', 'true');

      panels.forEach(p => {
        p.classList.remove('applications-tabs__panel--active');
        p.classList.remove('applications-tabs__panel--slide-left');
        p.classList.remove('applications-tabs__panel--slide-right');
      });

      const targetPanel = panels[newIndex];
      if (newIndex > currentIndex) {
        targetPanel.classList.add('applications-tabs__panel--slide-right');
      } else {
        targetPanel.classList.add('applications-tabs__panel--slide-left');
      }
      targetPanel.classList.add('applications-tabs__panel--active');

      currentIndex = newIndex;
    });
  });
});
</script>

