{{ 'product-intelligence.css' | asset_url | stylesheet_tag }}

<section class="product-intelligence {{ section.settings.custom_class }}" id="product-intelligence-{{ section.id }}">
  <!-- Hexagonal Pattern Overlay -->
  <div class="product-intelligence__pattern"></div>

  <div class="product-intelligence__container">
    <!-- Header -->
    <div class="product-intelligence__header">
      {% if section.settings.section_label != blank %}
        <span class="product-intelligence__label">{{ section.settings.section_label }}</span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="product-intelligence__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="product-intelligence__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <!-- Content -->
    <div class="product-intelligence__content">
      <!-- Tab Navigation -->
      <div class="product-intelligence__tabs" role="tablist">
        {% for block in section.blocks %}
          {% if block.type == 'tab' or block.type == 'specs_tab' or block.type == 'overview_tab' or block.type == 'features_tab' or block.type == 'included_tab' %}
            <button
              class="product-intelligence__tab {% if forloop.first %}product-intelligence__tab--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="panel-{{ block.id }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              <svg class="product-intelligence__tab-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                {% case block.settings.tab_icon %}
                  {% when 'overview' %}
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  {% when 'specs' %}
                    <path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z"/>
                  {% when 'features' %}
                    <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                  {% when 'included' %}
                    <path d="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-6 10H6v-2h8v2zm4-4H6v-2h12v2z"/>
                  {% when 'installation' %}
                    <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                  {% when 'support' %}
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"/>
                  {% else %}
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                {% endcase %}
              </svg>
              {{ block.settings.tab_title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Tab Panels -->
      <div class="product-intelligence__panels">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
            <div
              class="product-intelligence__panel {% if forloop.first %}product-intelligence__panel--active{% endif %}"
              role="tabpanel"
              id="panel-{{ block.id }}"
              data-panel-index="{{ forloop.index0 }}"
            >
              <div class="product-intelligence__panel-content">
                <!-- Left Side: Text + Feature Cards -->
                <div class="product-intelligence__left">
                  <div class="product-intelligence__text">
                    {{ block.settings.tab_content }}
                    {% if block.settings.read_more_link != blank %}
                      <a href="{{ block.settings.read_more_link }}" class="product-intelligence__read-more">Read More</a>
                    {% else %}
                      <a href="#" class="product-intelligence__read-more">Read More</a>
                    {% endif %}
                  </div>

                  <!-- Feature Cards -->
                  {% if block.settings.show_features %}
                    <div class="product-intelligence__features">
                      <!-- Feature 1 -->
                      {% if block.settings.feature_1_title != blank %}
                        <div class="product-intelligence__feature-card">
                          <div class="product-intelligence__feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                              {% case block.settings.feature_1_icon %}
                                {% when 'warranty' %}
                                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                                {% when 'support' %}
                                  <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
                                {% when 'parts' %}
                                  <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                                {% else %}
                                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                              {% endcase %}
                            </svg>
                          </div>
                          <h4 class="product-intelligence__feature-title">{{ block.settings.feature_1_title }}</h4>
                          <p class="product-intelligence__feature-desc">{{ block.settings.feature_1_desc }}</p>
                        </div>
                      {% endif %}

                      <!-- Feature 2 -->
                      {% if block.settings.feature_2_title != blank %}
                        <div class="product-intelligence__feature-card">
                          <div class="product-intelligence__feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                              {% case block.settings.feature_2_icon %}
                                {% when 'warranty' %}
                                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                                {% when 'support' %}
                                  <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
                                {% when 'parts' %}
                                  <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                                {% else %}
                                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                              {% endcase %}
                            </svg>
                          </div>
                          <h4 class="product-intelligence__feature-title">{{ block.settings.feature_2_title }}</h4>
                          <p class="product-intelligence__feature-desc">{{ block.settings.feature_2_desc }}</p>
                        </div>
                      {% endif %}

                      <!-- Feature 3 -->
                      {% if block.settings.feature_3_title != blank %}
                        <div class="product-intelligence__feature-card">
                          <div class="product-intelligence__feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                              {% case block.settings.feature_3_icon %}
                                {% when 'warranty' %}
                                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                                {% when 'support' %}
                                  <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
                                {% when 'parts' %}
                                  <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                                {% else %}
                                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                              {% endcase %}
                            </svg>
                          </div>
                          <h4 class="product-intelligence__feature-title">{{ block.settings.feature_3_title }}</h4>
                          <p class="product-intelligence__feature-desc">{{ block.settings.feature_3_desc }}</p>
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>

                <!-- Right Side: Image -->
                <div class="product-intelligence__right">
                  {% if block.settings.tab_image != blank %}
                    <img
                      src="{{ block.settings.tab_image | image_url: width: 600 }}"
                      alt="{{ block.settings.tab_title }}"
                      class="product-intelligence__image"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="product-intelligence__image-placeholder">
                      <span>Add Image</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% elsif block.type == 'overview_tab' %}
            <div
              class="product-intelligence__panel {% if forloop.first %}product-intelligence__panel--active{% endif %}"
              role="tabpanel"
              id="panel-{{ block.id }}"
              data-panel-index="{{ forloop.index0 }}"
            >
              <div class="product-intelligence__panel-content">
                <!-- Left Side: Text + Feature Cards -->
                <div class="product-intelligence__left">
                  <div class="product-intelligence__text">
                    <p>Meet the Brightlink Pro Spectrum COB LED Video Wall in our 217" Diagonal configuration. This 15.75' × 8.86' masterpiece delivers 8,294,400 pixels at 1.25mm pitch —true 4K resolution with HDR support.</p>
                    <p>The Pro Spectrum represents the pinnacle of COB technology. True pixel-to-LED resolution, high dynamic range, and superior contrast deliver visuals that feel alive. Crystal-clear text, rich blacks, and motion that stays smooth even in fast-paced content.</p>
                    <a href="{{ block.settings.read_more_link }}" class="product-intelligence__read-more">Read More</a>
                  </div>

                  <!-- Feature Cards -->
                  <div class="product-intelligence__features">
                    <!-- Feature 1: 4-Year Warranty -->
                    <div class="product-intelligence__feature-card">
                      <div class="product-intelligence__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                        </svg>
                      </div>
                      <h4 class="product-intelligence__feature-title">4-Year Warranty</h4>
                      <p class="product-intelligence__feature-desc">Comprehensive coverage</p>
                    </div>

                    <!-- Feature 2: Lifetime Support -->
                    <div class="product-intelligence__feature-card">
                      <div class="product-intelligence__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
                        </svg>
                      </div>
                      <h4 class="product-intelligence__feature-title">Lifetime Support</h4>
                      <p class="product-intelligence__feature-desc">855-449-4733</p>
                    </div>

                    <!-- Feature 3: 5% Spare Parts -->
                    <div class="product-intelligence__feature-card">
                      <div class="product-intelligence__feature-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                        </svg>
                      </div>
                      <h4 class="product-intelligence__feature-title">5% Spare Parts</h4>
                      <p class="product-intelligence__feature-desc">Included standard</p>
                    </div>
                  </div>
                </div>

                <!-- Right Side: Image -->
                <div class="product-intelligence__right">
                  {% if block.settings.tab_image != blank %}
                    <img
                      src="{{ block.settings.tab_image | image_url: width: 600 }}"
                      alt="{{ block.settings.tab_title }}"
                      class="product-intelligence__image"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="product-intelligence__image-placeholder">
                      <span>Add Image</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% elsif block.type == 'specs_tab' %}
            <div
              class="product-intelligence__panel product-intelligence__panel--specs {% if forloop.first %}product-intelligence__panel--active{% endif %}"
              role="tabpanel"
              id="panel-{{ block.id }}"
              data-panel-index="{{ forloop.index0 }}"
            >
              <!-- Specifications Content -->
              <div class="specs-content">
                <!-- Display Specifications Accordion -->
                <div class="specs-accordion" data-accordion>
                  <button class="specs-accordion__header" type="button">
                    <span class="specs-accordion__title">Display Specifications</span>
                    <svg class="specs-accordion__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </button>
                  <div class="specs-accordion__content">
                    <table class="specs-table">
                      <tbody>
                        <tr>
                          <td class="specs-table__label">Pixel Pitch</td>
                          <td class="specs-table__value">1.25mm</td>
                          <td class="specs-table__label">LED Type</td>
                          <td class="specs-table__value">COB (Chip-on-Board)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">LED Packaging</td>
                          <td class="specs-table__value">TOP</td>
                          <td class="specs-table__label">LED Configuration</td>
                          <td class="specs-table__value">1R 1G 1B</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Module Resolution</td>
                          <td class="specs-table__value">320 x 270 pixels (W×H)</td>
                          <td class="specs-table__label">Cabinet Resolution</td>
                          <td class="specs-table__value">480 × 270 pixels (W×H)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Screen Resolution</td>
                          <td class="specs-table__value">3840 × 2160 pixels (Full 4K)</td>
                          <td class="specs-table__label">Total Pixels</td>
                          <td class="specs-table__value">8,294,400</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Scanning Method</td>
                          <td class="specs-table__value">S45</td>
                          <td class="specs-table__label">Refresh Rate</td>
                          <td class="specs-table__value">≥3840Hz</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Drive Mode</td>
                          <td class="specs-table__value">1/43s</td>
                          <td class="specs-table__label">Brightness</td>
                          <td class="specs-table__value">600cd/m² (Standard), 1000cd/m² (Optional)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Contrast Ratio</td>
                          <td class="specs-table__value">≥8000:1</td>
                          <td class="specs-table__label">Colors</td>
                          <td class="specs-table__value">281 Trillion</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Gray Scale</td>
                          <td class="specs-table__value">16-bit</td>
                          <td class="specs-table__label">Color Temperature</td>
                          <td class="specs-table__value">3000~9500K (Adjustable)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Luminance Uniformity</td>
                          <td class="specs-table__value">≥98%</td>
                          <td class="specs-table__label">Chromatic Uniformity</td>
                          <td class="specs-table__value">±0.003Cx,Cy</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Viewing Angle</td>
                          <td class="specs-table__value">170° Horizontal / 160° Vertical (>50%)</td>
                          <td class="specs-table__label">View Distance</td>
                          <td class="specs-table__value">2m ~ 50m (6' ~ 165')</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Frame Rate</td>
                          <td class="specs-table__value">50/60Hz</td>
                          <td class="specs-table__label"></td>
                          <td class="specs-table__value"></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>

                <!-- Physical Specifications Accordion -->
                <div class="specs-accordion" data-accordion>
                  <button class="specs-accordion__header" type="button">
                    <span class="specs-accordion__title">Physical Specifications</span>
                    <svg class="specs-accordion__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </button>
                  <div class="specs-accordion__content">
                    <table class="specs-table">
                      <tbody>
                        <tr>
                          <td class="specs-table__label">Module Size</td>
                          <td class="specs-table__value">150mm × 337.5mm (W×H)</td>
                          <td class="specs-table__label">Module Weight</td>
                          <td class="specs-table__value">340g ±10g</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Cabinet Size</td>
                          <td class="specs-table__value">600mm × 337.5mm × 25mm (W×H×D)</td>
                          <td class="specs-table__label">Cabinet Size (Imperial)</td>
                          <td class="specs-table__value">23.62" × 13.3" × 1"</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Cabinet Weight</td>
                          <td class="specs-table__value">3.78kg (8.3 lbs)</td>
                          <td class="specs-table__label">Screen Dimensions</td>
                          <td class="specs-table__value">4.8m × 2.7m (15.75' × 8.86')</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Screen Diagonal</td>
                          <td class="specs-table__value">217 Inches</td>
                          <td class="specs-table__label">Total Screen Area</td>
                          <td class="specs-table__value">12.96m² (141 sq ft)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Cabinet Quantity</td>
                          <td class="specs-table__value">64 units (8 wide × 8 high)</td>
                          <td class="specs-table__label">Modules per Cabinet</td>
                          <td class="specs-table__value">4 units (1 wide × 4 high)</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Cabinet Material</td>
                          <td class="specs-table__value">Die-Cast Aluminum</td>
                          <td class="specs-table__label">Aspect Ratio</td>
                          <td class="specs-table__value">16:9</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Installation Type</td>
                          <td class="specs-table__value">Wall mount, stacking, or hanging</td>
                          <td class="specs-table__label">Service Access</td>
                          <td class="specs-table__value">100% front serviceable</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Protection Level</td>
                          <td class="specs-table__value">IP30</td>
                          <td class="specs-table__label"></td>
                          <td class="specs-table__value"></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>

                <!-- Electrical Specifications Accordion -->
                <div class="specs-accordion" data-accordion>
                  <button class="specs-accordion__header" type="button">
                    <span class="specs-accordion__title">Electrical Specifications</span>
                    <svg class="specs-accordion__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </button>
                  <div class="specs-accordion__content">
                    <table class="specs-table">
                      <tbody>
                        <tr>
                          <td class="specs-table__label">Input Voltage</td>
                          <td class="specs-table__value">AC 100-240V, 50/60Hz</td>
                          <td class="specs-table__label">Supply Voltage</td>
                          <td class="specs-table__value">DC 4.2V</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Maximum Current (per module)</td>
                          <td class="specs-table__value">4A</td>
                          <td class="specs-table__label">Peak Power Consumption</td>
                          <td class="specs-table__value">≤350W/m²</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Average Power Consumption</td>
                          <td class="specs-table__value">≤190W/m²</td>
                          <td class="specs-table__label">Power Interface</td>
                          <td class="specs-table__value">Three-pole flat connector</td>
                        </tr>
                        <tr>
                          <td class="specs-table__label">Signal Interface</td>
                          <td class="specs-table__value">RJ45 (Ethernet)</td>
                          <td class="specs-table__label">Control Mode</td>
