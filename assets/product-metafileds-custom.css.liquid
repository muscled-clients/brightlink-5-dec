/* product page css start */

/* icon with text block css start */
.pdp-icon-text-inline{
  display: inline-flex;
  align-items: center;
  gap: 10px;
  line-height: 1.2;
}

.pdp-icon-text-inline__icon{
  display: block;
  width: 18px;
  height: 18px;
  object-fit: contain;
  flex: 0 0 18px;
}

.pdp-icon-text-inline__text{
  display: inline-block;
  font-size: 14px;
}


/* icon with text css end */